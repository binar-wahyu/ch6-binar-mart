<% if (alertSuccess.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= alertSuccess %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<div class="d-flex justify-content-between align-items-center">
  <h3 class="m-0"><%= pageTitle %></h3>
  <a class="btn btn-primary" href="/suppliers/create" role="button">
    <i class="bi-plus-lg"></i> Buat Baru
  </a>
</div>

<div class="table-responsive mt-3">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama Supplier</th>
        <th scope="col">No Telp</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach((supplier, index) => { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td class="w-100"><%= supplier.name %></td>
          <td><%= supplier.phoneNumber %></td>
          <td>
            <div class="d-flex gap-2 text-nowrap">
              <a class="btn btn-success btn-sm" href="/suppliers/<%= supplier.id %>" role="button">
                <i class="bi-eye-fill"></i> Lihat Detail
              </a>

              <a class="btn btn-primary btn-sm" href="/suppliers/<%= supplier.id %>/edit" role="button">
                <i class="bi-pencil-fill"></i> Edit
              </a>
              
              <form method="post" action="/suppliers/<%= supplier.id %>?_method=DELETE">
                <button class="btn btn-danger btn-sm" type="submit">
                  <i class="bi-trash-fill"></i> Hapus
                </button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>